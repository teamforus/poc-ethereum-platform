{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@app/*": ["app/*"],
      "@contracts/*": ["utils/contracts/*"],
      "@models/*": ["models/*"],
      "@styles/*": ["assets/style"],
      "@utils/*": ["utils/*"]
    },
    "target": "es5",
    "types": [
      "web3"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
